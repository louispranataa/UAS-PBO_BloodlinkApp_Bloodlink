<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.bloodlink.controllers.DonorRegisterController"
           style="-fx-background-color: linear-gradient(to bottom right, #e8f0fe, #f0fff4);">

    <VBox spacing="15" alignment="CENTER"
          maxWidth="400"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 4);">

        <Label text="Donor Registration"
               style="-fx-font-size: 24px; -fx-text-fill: #2f4858; -fx-font-weight: bold;" />

        <TextField fx:id="nameField" promptText="Full Name"
                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8;" />

        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8;" />

        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 8;" />

        <ComboBox fx:id="bloodTypeBox" promptText="Blood Type"
                  style="-fx-background-radius: 6; -fx-border-radius: 6;" />

        <Button text="Register" onAction="#handleRegister"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />

        <Button text="Back to Login" onAction="#handleBackToLogin"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" />

    </VBox>
</StackPane>
