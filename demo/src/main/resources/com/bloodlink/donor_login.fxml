<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.bloodlink.controllers.DonorLoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #f0f4f8, #d9e2ec);">

    <VBox spacing="15" alignment="CENTER"
          maxWidth="350"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);">

        <Label text="Donor Login"
               style="-fx-font-size: 24px; -fx-text-fill: #2f4858; -fx-font-weight: bold;" />

        <TextField fx:id="emailField"
                   promptText="Email"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />

        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
        
        <Button text="Register as New Donor" onAction="#handleGoToRegister"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />

        <Button text="Login as Hospital" onAction="#handleGoToHospitalLogin"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />

    </VBox>
</StackPane>
