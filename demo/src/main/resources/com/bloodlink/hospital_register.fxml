<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.bloodlink.controllers.HospitalRegisterController"
           style="-fx-background-color: linear-gradient(to bottom right, #e8f5e9, #ffffff);">

    <VBox spacing="15" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
        
        <Label text="🏥 Hospital Registration"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #388e3c;" />

        <TextField fx:id="nameField" promptText="Hospital Name"
                   style="-fx-pref-width: 260; -fx-font-size: 14px;" />

        <TextField fx:id="emailField" promptText="Email"
                   style="-fx-pref-width: 260; -fx-font-size: 14px;" />

        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-pref-width: 260; -fx-font-size: 14px;" />

        <TextField fx:id="addressField" promptText="Address"
                   style="-fx-pref-width: 260; -fx-font-size: 14px;" />

        <Button text="Register" onAction="#handleRegister"
                style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Separator />

        <Button text="Back to Login" onAction="#handleBackToLogin"
                style="-fx-background-color: transparent; -fx-border-color: #388e3c; -fx-text-fill: #388e3c;" />
    </VBox>
</StackPane>
